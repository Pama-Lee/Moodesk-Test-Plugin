{
  "id": "moodesk-hello-world",
  "name": "Hello World Plugin",
  "version": "1.0.0",
  "description": "A simple hello world plugin for Moodesk",
  "author": "Your Name",
  "permissions": [],
  "hooks": ["onInit"],
  
  "files": {
    "js": [
      {
        "path": "src/index.js",
        "type": "main"
      },
      {
        "path": "src/utils/helper.js",
        "type": "module"
      },
      {
        "path": "src/components/ui.js",
        "type": "module"
      }
    ],
    "css": [
      "src/styles/main.css"
    ]
  },

  "dependencies": {
    "required": ["core"],
    "optional": ["pdf-viewer"]
  },

  "config": {
    "loadOrder": "sequential",
    "autoLoad": true
  }
}
